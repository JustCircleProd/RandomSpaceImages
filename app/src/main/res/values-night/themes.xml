<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

<style name="Theme.RandomSpaceImages" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/blue_light</item>
        <item name="colorPrimaryVariant">@color/blue_dark</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/red</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="background">@color/background</item>
        <!-- Status, action bar, system navigation -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:navigationBarColor">@color/system_navigation_bar</item>
        <item name="android:statusBarColor">@color/background</item>
        <!-- Helps to enable the apps theme switching function for some devices -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>
</resources>